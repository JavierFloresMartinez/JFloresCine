@model ML.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Nueva Contraseña - CineApp</title>
</head>
<style>
        body {
      background-color: #f7f7f7;
      font-family: Arial, sans-serif;
    }

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .login-container {
      background-color: #fff;
      padding: 40px;
      border-radius: 10px;
      text-align: center;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      max-width: 400px;
      width: 100%;
    }

    h1 {
      color: #333;
      font-size: 24px;
      margin-bottom: 30px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .btn {
      background-color: #ff5722;
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .btn:hover {
      background-color: #ff784e;
    }

    .register-link,
    .forgot-password-link {
      margin-top: 20px;
    }

    .register-link a,
    .forgot-password-link a {
      color: #ff5722;
      text-decoration: none;
    }

    .register-link a:hover,
    .forgot-password-link a:hover {
      text-decoration: underline;
    }
</style>
<body>
    <div class="container">
        <div class="login-container">
            <h1>Cambiar Contraseña</h1>
            @using (Html.BeginForm("NuevoPassword", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <form>

                    <div class="form-group">
                        <input type="password" placeholder="Nueva Contraseña" name="password">
                    </div>
                    <div class="form-group">
                        <input type="password" placeholder="Confirme Contraseña" name="psword">
                    </div>

                    <button type="submit" class="btn">Cambiar Contraseña</button>
                </form>


            }
        </div>
    </div>
</body>
</html>